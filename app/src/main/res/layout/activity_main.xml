<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Model" />

    <Button
        android:id="@+id/btnLiveData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Data" />

    <Button
        android:id="@+id/btnDataBinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Binding" />

    <Button
        android:id="@+id/btnMVVM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MVVM" />

    <Button
        android:id="@+id/btnDiffUtils"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diff Utils" />

    <Button
        android:id="@+id/btnWorkManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Manager" />

</LinearLayout>